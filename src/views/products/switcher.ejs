<% const categories = [{Name: "Brand", Anchor: "/brands"}, {Name: "Category", Anchor: "/categories"}, {Name: "All", Anchor: "/"}] %>

<div class="category-switcher-container">
  <div class="category-switcher">
    <span class="text">Filter By:</span>
    <span class="buttons">
      <!-- generate links while checking and highlighting active link -->
      <% categories.forEach(cat => { %>
        <a href="<%= "/products" + cat.Anchor %>" class="<%= activeCategory === cat.Anchor ? 'active' : '' %>">
          <%= cat.Name %>
        </a>
      <% }) %>
    </span>
  </div>
</div>
